{
	"manifest_version": 2,
	"name": "Rewards Bank",
	"description": "Aggregates reward accounts into one convenient location",
	"version": "1.0",
	"icons": { 
		"16": "img/icon16.png",
		"48": "img/icon48.png",
		"128": "img/icon128.png" 
	},
	"browser_action": {
		"default_icon": {                    
			"19": "img/icon48.png",          
			"38": "img/icon48.png"          
		},
		"default_popup": "popup.html"
	},
	"content_security_policy": "script-src 'self' https://ssl.google-analytics.com; object-src 'self'",
	"web_accessible_resources": [
		"img/icon128.png"
	],
	"permissions": [
		"storage",
		"https://www.united.com/ual/en/us/"
	]
}